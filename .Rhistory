read_price_data <- function(commodity) {
file_path <- paste(commodity, ".csv", sep = "")
tb_data <- read_csv(
file_path,
col_types = cols_only(
adm1_name = col_character(),
mkt_name = col_character(),
cm_name = col_character(),
mp_month = col_integer(),
mp_year = col_integer(),
mp_price = col_double()
)
)
tb_data <- tb_data |>
rename(
region = adm1_name,
market = mkt_name,
commodity_kg = cm_name,
month = mp_month,
year = mp_year,
price_rwf = mp_price
)
tb_data <- tb_data |>
mutate(ymd(paste(year, month, "01"))) |>
select(-month, -year)
}
